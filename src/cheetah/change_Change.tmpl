ch = self.change

cl = list()
cl.append(type(ch).__name__)

if ch.is_change():
    cl.append("changed")
    if ch.is_ignored(self.options):
        cl.append("ignored")
else:
    cl.append("unchanged")

cl = " ".join(cl)
%>

