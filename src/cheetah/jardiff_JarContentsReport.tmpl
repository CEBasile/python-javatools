<!-- begin jardiff_JarContentsReport.details -->
<div class="details">

<%
import javaclass.jardiff
import javaclass.change

## collect the changes into buckets by type
change = getattr(self, "change")
changemap = javaclass.change.collect_by_type(change.collect())
changeorder = (
    javaclass.jardiff.JarManifestChange,
    javaclass.jardiff.JarSignatureAdded,
    javaclass.jardiff.JarSignatureRemoved,
    javaclass.jardiff.JarSignatureChange,
    javaclass.jardiff.JarContentAdded,
    javaclass.jardiff.JarContentRemoved,
    javaclass.jardiff.JarContentChange,
    javaclass.jardiff.JarClassAdded,
    javaclass.jardiff.JarClassRemoved,
    javaclass.jardiff.JarClassChange,
)

## gather SquashedChange instances under a more appropriate heading
for sq in changemap.pop(javaclass.change.SquashedChange, ()):
    oc = sq.origclass
    if oc is javaclass.jardiff.JarClassReport:
        oc = javaclass.jardiff.JarClassChange
    sqm = changemap.get(oc, None)
    if sqm is None:
	changemap[oc] = sqm = list()
    sqm.append(sq)
%>

## print the above types gathered in order
