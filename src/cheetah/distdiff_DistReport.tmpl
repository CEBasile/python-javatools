## collect the changes into buckets by type
<%
change = getattr(self, "change")
changemap = javaclass.change.collect_by_type(change.collect())
changeorder = (
    javaclass.distdiff.DistClassAdded,
    javaclass.distdiff.DistClassRemoved,
    javaclass.distdiff.DistClassChange,
    javaclass.distdiff.DistJarAdded,
    javaclass.distdiff.DistJarRemoved,
    javaclass.distdiff.DistJarChange,
    javaclass.distdiff.DistContentAdded,
    javaclass.distdiff.DistContentRemoved,
    javaclass.distdiff.DistContentChange,
)

## gather SquashedChange instances under a more appropriate heading
for sq in changemap.pop(javaclass.change.SquashedChange, ()):
    oc = sq.origclass
    if oc is javaclass.distdiff.DistJarReport:
        oc = javaclass.distdiff.DistJarChange
    elif oc is javaclass.distdiff.DistClassReport:
        oc = javaclass.distdiff.DistClassChange
    sqm = changemap.get(oc, None)
    if sqm is None:
	changemap[oc] = sqm = list()
    sqm.append(sq)
%>

