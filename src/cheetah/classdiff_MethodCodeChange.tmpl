change = getattr(self, "change")
ldata = change.get_ldata()
rdata = change.get_rdata()
merged = merge_code(ldata, rdata)
%>
#for rel_line, (left, right) in sorted(merged.items())
<% 
first = True
last = False

left_line = None
left_code = tuple()
if left is not None:
    left_line, left_code = left

right_line = None
right_code = tuple()
if right is not None:
    right_line, right_code = right

rowspan = max(len(left_code), len(right_code))
lastrow = (rowspan - min(len(left_code), len(right_code)))
%>
#for lcode, rcode in izip_longest(left_code, right_code)
<tr>

#if first
<td rowspan="<%= rowspan %>"><%= rel_line %></td>
#end if

#if lcode is not None
#if first
<td rowspan="<%= rowspan %>"><%= left[0] %></td>
#end if
<% offset, code, args = lcode %>
<td><%= offset %></td>
<td><%= get_opname_by_code(code) %></td>
<td><%= ((has_const_arg(code) and ("#%s" % args[0]))
         or ", ".join(map(str, args))) %></td>
#else
#if not last
#if first
<td colspan="4" rowspan="<%= lastrow %>"></td>
#else
<td colspan="3" rowspan="<%= lastrow %>"></td>
#end if
<% last = True %>
#end if
#end if

#if rcode is not None
#if first
<td rowspan="<%= rowspan %>"><%= right[0] %></td>
#end if
<% offset, code, args = rcode %>
<td><%= offset %></td>
<td><%= get_opname_by_code(code) %></td>
<td><%= ((has_const_arg(code) and ("#%s" % args[0]))
         or ", ".join(map(str, args))) %></td>
#else
#if not last
#if first
<td colspan="4" rowspan="<%= lastrow %>"></td>
#else
<td colspan="3" rowspan="<%= lastrow %>"></td>
#end if
<% last = True %>
#end if
#end if
</tr>
<% first = False %>
#end for
#end for
