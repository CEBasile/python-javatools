#extends change_Change
#implements respond


<%
ch = getattr(self, "change")
opts = getattr(self, "options")

cl = list()
cl.append(type(ch).__name__)
cl.append(ch.origclass.__name__)

if ch.is_change():
    cl.append("changed")
    if ch.is_ignored(opts):
        cl.append("ignored")
else:
    cl.append("unchanged")

cl = " ".join(cl)
%>

<div class="<%= cl %>">


#block description
#from xml.sax.saxutils import escape
$escape($change.entry)
#end block


#block details
<%
from javaclass.distdiff import DistJarReport, DistClassReport
from javaclass.jardiff import JarClassReport

change = getattr(self, "change")
oc = change.origclass
if oc is DistJarReport:
    uri = change.entry + "/JarReport.html"
elif oc in (DistClassReport, JarClassReport):
    uri = change.entry + "/JavaClassReport.html"
%>
<div class="details">
<a class="moreinfo" href="<%= uri %>">more info...</a>
</div>
#end block


